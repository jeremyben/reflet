{
	"name": "@reflet/mongoose",
	"version": "2.0.0-next.0",
	"author": "Jeremy Bensimon",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jeremyben/reflet.git",
		"directory": "mongoose"
	},
	"homepage": "https://github.com/jeremyben/reflet/tree/master/mongoose#readme",
