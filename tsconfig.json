		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		/* Compiler Plugins */
		"plugins": [
			{
				// https://github.com/Microsoft/typescript-tslint-plugin
				"name": "typescript-tslint-plugin",
				"configFile": "tslint.json"
			}
		]
	}
