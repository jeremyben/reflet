{
	"version": "independent",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"version": {
			"allowBranch": "master",
			"conventionalCommits": true,
			"push": false,
			"message": "chore: release"
		}
	},
	"ignoreChanges": [
		"**/__fixtures__/**",
		"**/__tests__/**",
		"**/*.test.ts",
		"**/test.ts",
		"**/*.md",
		"**/*.MD",
		"**/coverage-summary.json"
	]
}
