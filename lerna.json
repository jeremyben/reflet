{
	"version": "independent",
	"npmClient": "yarn",
	"$schema": "node_modules/lerna/schemas/lerna-schema.json",
	"command": {
		"version": {
			"allowBranch": "master",
			"private": false,
			"conventionalCommits": true,
			"push": false,
			"message": "chore(release): latest"
		},
		"publish": {
			"allowBranch": "master"
		}
	},
	"ignoreChanges": [
		"**/__fixtures__/**",
		"**/__tests__/**",
		"**/*.test.ts",
		"**/test.ts",
		"**/*.md",
		"**/*.MD",
		"**/coverage-summary.json",
		"**/jest*"
	]
}
